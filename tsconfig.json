{
  "compilerOptions": {
    // Type Checking
    "strict": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,

    // Modules
    "module": "nodenext",
    "moduleResolution": "NodeNext",

    // Interop Constraints
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    // Emit
    "noEmit": true,

    // JavaScript Support
    "allowJs": true,

    // Language and Environment
    "jsx": "react-jsx",

    // Completeness
    "skipLibCheck": true
  },
  "include": ["src"]
}
